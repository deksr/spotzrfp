

<h1>Editing Item</h1>

<%# render 'form' %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>


<div class="span8">
  <h1>Edit Item</h1>
    <%= form_for @item do |f| %>
  <div>Description:<br/>
    <%= f.text_field :itemname %></div>

  <div>Address:<br/>
    <%= f.text_field :address %></div>

  <div>
    <%= f.submit url: { :action => "update" }, class: "btn btn-sm btn-success"%>
  </div><br/>
    <% end %>

  <div>
    <%= button_to "Delete Location", item_path(@item), method: :delete %>
  </div>
</div>

