


<div class ="loginform">
<!--   <h2 class="signup">Sign up</h2>
 -->


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    
    <%= f.text_field :name, :class => "namepasswordbox", autofocus: true, :placeholder => "name"%>
  </div>

 <div class="field">
 
    <%= f.email_field :email, :class => "namepasswordbox", autofocus: true, :placeholder => "email" %>
  </div>

  <div class="field">
   
    <%if @minimum_password_length %>
   <!--  <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
    <% end %><br />
    <%= f.password_field :password, :class => "namepasswordbox", autocomplete: "off", :placeholder => "Password - 8 characters minimum " %>
  </div>

  <div class="field">
    
    <%= f.password_field :password_confirmation, :class => "namepasswordbox", autocomplete: "off" , :placeholder => "Retype Password "%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , :class => "button"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>

</div>




