<div class="loginform">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div>
      <%= f.email_field :email, autofocus: true , :class => "namepasswordbox", :placeholder => "email"%>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "off" , :class => "namepasswordbox", :placeholder => "password"%>
    </div>

    <%# if devise_mapping.rememberable? -%>
    <!--   <div class="field"> -->
        <%#f.check_box :remember_me %>
        <%# f.label :remember_me %>
     <!--  </div> -->
    <%# end -%>

    <div class="actions">

      <%= f.submit "Log in" , :class => "button"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %> 
</div>
